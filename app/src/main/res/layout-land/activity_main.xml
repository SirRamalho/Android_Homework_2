<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.pedroramalho.lab_4.MainActivity">


  <fragment
      android:id="@+id/taskFragment"
      android:name="com.example.pedroramalho.lab_4.TaskListFragment"
      android:layout_width="250dp"
      android:layout_height="261dp"
      android:layout_above="@+id/taskTitle"
      android:layout_alignParentStart="true"
      android:layout_alignParentTop="true"
      android:layout_marginStart="26dp"
      android:layout_marginTop="35dp"/>


    <fragment
        android:id="@+id/displayFragment"
        android:name="com.example.pedroramalho.lab_4.TaskInfoFragment"
        android:layout_width="182dp"
        android:layout_height="250dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="330dp"
        android:layout_marginTop="35dp"
        android:layout_marginEnd="70dp"
        android:layout_weight="1"
        android:onClick="addClick"
         />

  <android.support.design.widget.FloatingActionButton
      android:id="@+id/addPerson"
      android:layout_width="wrap_content"
      android:layout_height="wrap_content"
      android:layout_above="@+id/removePerson"
      android:layout_alignParentEnd="true"
      android:layout_alignParentBottom="true"
      android:layout_gravity="bottom|end"
      android:layout_marginEnd="12dp"
      android:layout_marginBottom="106dp"
      android:visibility="visible"
      app:backgroundTint="@android:color/background_light"
      app:srcCompat="@android:drawable/ic_input_add" />


    <android.support.design.widget.FloatingActionButton
        android:id="@+id/removePerson"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom|end"
        android:layout_marginEnd="14dp"
        android:layout_marginBottom="16dp"
        android:src="@android:drawable/ic_delete"
        android:visibility="visible"
        app:backgroundTint="@android:color/background_light" />






</RelativeLayout>